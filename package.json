    "@types/node": "^22.18.13",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "@biomejs/biome": "^2.3.2",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "yarn@4.8.0"
