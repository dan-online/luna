    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "rome": "^11.0.0",
    "tslib": "^2.4.1",
    "tsup": "^6.5.0",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "yarn@3.3.1"
