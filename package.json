    "@types/node": "^22.8.6",
    "husky": "^9.0.6",
    "nodemon": "^3.0.0",
    "@biomejs/biome": "^1.0.0",
    "tslib": "^2.5.3",
    "tsup": "^8.0.0",
    "turbo": "^2.0.14",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "yarn@4.7.0"
